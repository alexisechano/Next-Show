<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NextShow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF5349</item>
        <item name="colorPrimaryVariant">#E04D46</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#2F8CE0</item>
        <item name="colorSecondaryVariant">#266094</item>
        <item name="colorOnSecondary">#d6d3d2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- Style for the filter checkboxes -->
    <style name="MyAlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:colorAccent">@color/theme_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/darker_gray</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#E04D46</item>
    </style>

    <!-- Style for the divider -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">@dimen/detail_spacing_large</item>
        <item name="android:layout_marginEnd">@dimen/detail_spacing_large</item>
        <item name="android:layout_marginBottom">@dimen/item_spacing_large</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>